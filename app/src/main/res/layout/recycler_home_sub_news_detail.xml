<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/subNewsImage"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/custom_home_sub_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/subNewsPlayBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_general_play_shadow"
        app:layout_constraintEnd_toEndOf="@id/subNewsImage"
        app:layout_constraintBottom_toBottomOf="@id/subNewsImage"
        app:layout_constraintWidth_percent="0.19"/>

    <TextView
        android:id="@+id/subNewsText"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/subNewsImage"
        app:layout_constraintEnd_toEndOf="@id/subNewsImage"
        app:layout_constraintTop_toBottomOf="@id/subNewsImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>